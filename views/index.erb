<html>
  <h1> welcome to Web Guesser!</h1>
  <body>

    <% if params[:cheat] == "true" %>
      <p>
        The SECRET NUMBER is <%= secret %>
      </p>
    <% end %>

    <% if params[:guess]%>
      <p>
        You guessed <%= guess  %>.  <%= message %>
      </p>
    <% end %>

    <form>
      <input type='text' name='guess' />
      <input type='submit' value='Guess a number!' />
    </form>

  </body>
</html>

